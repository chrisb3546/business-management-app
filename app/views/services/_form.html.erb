<% if @service.errors.any? %>
<ul>
  <% @service.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%=form_for  @service do |f|%>
<%=f.label :name%>
<%=f.text_field :name%>
<br>
<%=f.label :description%>
<%=f.text_area :description%>
<%=f.hidden_field :user_id%>
<br>
<%=f.label :price%>
<%=f.number_field :price, step: 0.1%>
<br>

<%=f.submit%>
<%end %>