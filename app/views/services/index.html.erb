<h1>Service index page</h1>

<%=form_tag services_path, method: :get do%>
<%=text_field_tag :query %>
<%=submit_tag "search"%>
<%end%>

<%@services.each do |s|%>
<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <li ><%= link_to s.name, service_path(s), class:"list-group-item" %></li>
  </ul>
</div>
<%end%>

<%= link_to 'add service', new_service_path %>